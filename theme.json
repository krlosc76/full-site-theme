{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings":{
        "border": {
            "color": true
        },
        "color": {
            "defaultPalette": false,
            "defaultDuotone": false,
            "defaultGradients": false,
            "link": true,
            "palette": [
                {
                    "slug": "principal",
                    "color": "#00235a",
                    "name": "principal"
                },
                {
                    "slug": "secundario",
                    "color": "#ff5e14",
                    "name": "secundario"
                },
                {
                    "slug": "blanco",
                    "color": "#ffffff",
                    "name": "blanco"
                },
                {
                    "slug": "gris",
                    "color": "#373737",
                    "name": "gris parrafo"
                },
                {
                    "slug": "gris-2",
                    "color": "#777777",
                    "name": "gris 2"
                }

            ]
        },
        "layout": {
			"contentSize": "80vw",
			"wideSize": "1280px"
		},
        "position": {
            "sticky": true
        },
        "spacing": {
            "defaultSpacingSizes": false,
			"margin": true,
			"padding": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ]
		},
        "typography": {
            "defaultFontSizes": true,
            "dropCap": false,
            "textAlign": true,
            "lineHeight": true,
            "fontFamilies": [
                {
					"fontFace": [
						{
							"fontFamily": "Jost",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./fonts/jost/static/jost-Regular.ttf"
							]
						},
                        {
							"fontFamily": "Jost",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": [
								"file:./fonts/jost/static/jost-Medium.ttf"
							]
						},
                        {
							"fontFamily": "Jost",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "600",
							"src": [
								"file:./fonts/jost/static/jost-Semibold.ttf"
							]
						}
					],
					"fontFamily": "\"Jost\", sans-serif",
					"name": "Jost",
					"slug": "body"
				}
            ]
        },
        "blocks": {
            "core/column":{
                "spacing": {
                    "blockGap": true
                }
            }
        }
    
    },
    "styles": {
	"color": {
		"background": "var(--wp--preset--color--blanco)"
	},
   "spacing": {
			"margin": {
				"top": "0px",
				"right": "0px",
				"bottom": "0px",
				"left": "0px"
			},
			"padding": {
				"top": "0px",
				"right": "0px",
				"bottom": "0px",
				"left": "0px"
			}
		},
    "typography": {
        "fontFamily": "var(--wp--preset--font-family--body)",
        "lineHeight": "1.5"
    },
    "blocks": {
        "core/button":{
            "border": {
                "radius": "0px"
            },
            "color": {
                "background": "var(--wp--preset--color--secundario)",
                "text": "var(--wp--preset--color--blanco)"   
            },
            "spacing": {
                "padding": {
                    "top": "20px",
                   "right": "33px",
				    "bottom":"20px",
				    "left": "33px"
                }
            },
            "typography": {
                "fontSize": "13px",
                "fontWeight": "600",
                "letterSpacing": "1px"
            }
        },
        "core/columns":{
            "spacing": {
                "margin": {
                   "bottom": "0"
                }
            }
        },
        "core/group":{
            "spacing": {
                "padding": {
                   "bottom": "0",
					"left": "15px",
					"right": "15px",
					"top": "0"
                }
            }
        },
        "core/heading":{
           "color": {
				"text": "var(--wp--preset--color--primario)"
				},
            "typography": {
                "fontSize": "28px",
                "fontWeight": "600"
                },
            "spacing": {
                "margin": {
                   "bottom": "30px",
                    "top": "0"
                }
            }
        },
        "core/paragraph":{
            "color": {
				"text": "var(--wp--preset--color--gris)"
				},
            "typography": {
                "fontSize": "17px",
                "fontWeight": "400"
                },
            "spacing": {
                "margin": {
                   "bottom": "20px",
                    "top": "0"
                }
            }
        },
        "core/separator":{
            "dimensions": {
                "minHeight": "50px"
            }
        }
        
    },
    "elements": {
        "link":{
            "typography": {
                "textDecoration": "none"
            }
        }
    }
},
"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
    }


   